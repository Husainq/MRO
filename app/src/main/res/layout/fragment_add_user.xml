<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasukFragment"
    android:background="@color/white">

    <ImageView
        android:id="@+id/gambar_login"
        android:layout_width="167dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/add_a_photo_24" />

    <LinearLayout
        android:id="@+id/ly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/gambar_login"
        android:padding="30dp">

        <EditText
            android:id="@+id/edt_email_signup"
            android:layout_width="350dp"
            android:layout_height="57dp"
            android:background="@drawable/border"
            android:hint="Email"
            android:drawableLeft="@drawable/email"
            android:paddingLeft="15dp"
            android:drawablePadding="7dp"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/poppinsregular"
            android:textSize="13sp"
            android:textColorHint="@color/teks"
            android:textColor="@color/SecondaryColor"
            />

        <EditText
            android:id="@+id/edt_username_signup"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/border"
            android:hint="Username"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/user"
            android:paddingLeft="15dp"
            android:drawablePadding="7dp"
            android:inputType="text"
            android:fontFamily="@font/poppinsregular"
            android:textSize="13sp"
            android:textColorHint="@color/teks"
            android:textColor="@color/SecondaryColor"
            />

        <EditText
            android:id="@+id/edt_phonenumber_signup"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/border"
            android:hint="Phone Number"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/phone"
            android:paddingLeft="15dp"
            android:drawablePadding="7dp"
            android:inputType="number|phone"
            android:fontFamily="@font/poppinsregular"
            android:textSize="13sp"
            android:textColorHint="@color/teks"
            android:textColor="@color/SecondaryColor"
            />

        <EditText
            android:id="@+id/edt_password_signup"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/border"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/teks"
            android:inputType="textPassword"
            android:fontFamily="@font/poppinsregular"
            android:hint="Password"
            android:drawableLeft="@drawable/pass"
            android:paddingLeft="15dp"
            android:drawablePadding="7dp"
            android:textSize="13sp"
            android:textColor="@color/SecondaryColor"
            />

    </LinearLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_signup"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:text="Sign Up"
        android:layout_below="@id/ly1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/kolom_biru"
        android:width="300dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/poppinsbold"
        android:textAllCaps="false"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/button_signup"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"
            android:textColor="@color/teks"
            />

        <TextView
            android:id="@+id/txt_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"
            android:textColor="@color/PrimaryColor"
            />

    </LinearLayout>

</RelativeLayout>